<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppBarTitle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="fontPath">fonts/Inter-Bold-slnt=0.ttf</item>
        <item name="android:layout_marginStart">@dimen/dimen_16</item>
    </style>

    <style name="TextAppearance.FontPathBold" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Inter-Bold-slnt=0.ttf</item>
    </style>

</resources>